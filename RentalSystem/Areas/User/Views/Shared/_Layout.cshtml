
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Booking.com | @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link href="~/lib/toastr.js/toastr.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/AdminStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RentalSystem.styles.css" asp-append-version="true" />

    <link rel="icon" href="~/faviconBooking.ico" class="rounded-circle" type="image/x-icon" />
	<link href="~/css/site.css" rel="stylesheet" />
	<script src="~/lib/tinymce/tinymce.min.js"></script>
</head>
<body style="min-width: 1400px;">
    @await Component.InvokeAsync("MenuUser")
    <div class="container-fluid">
        <div class="row">
            <div class="col-auto p-2 bg-light position-fixed" style="width: 300px; min-height: 730px; margin-top: 57px;">
                
                @await Component.InvokeAsync("AccountUser")

                <div class="row mx-4 mt-2 mb-4">
                    <div class="col-auto p-0">
                        <button class=" p-0 p-2 py-1 px-4 rounded-1 border border-none " style="background-color: rgb(209, 164, 0); font-size: 14px;"><a href="#" class="text-decoration-none text-black">Nạp tiền</a></button>
                        <button class=" p-0 p-2  py-1 px-4 rounded-1 border border-none " style="background-color: rgb(236, 45, 35); font-size: 14px;"><a asp-action="AddOrUpdatePost" asp-controller="UserPost" asp-route-id="" class="text-decoration-none text-black">Đăng tin</a></button>
                    </div>
                </div>
                <hr>
@*                 <div class="row mx-3 mt-1  p-2 pt-1 hover-background-secondary rounded-2 pointer">
                    <div class="col-auto p-0"><i class="fas fa-hand-holding-heart pe-2"></i></div>
                    <div class="col-auto p-0 pe-2"> Khuyến mãi 2024 <img class="mb-1" src="~/Image/Manager/hot.gif"></div>
                </div> *@
               @*  <div class="row mx-3 mt-1 p-2 pt-1 hover-background-secondary rounded-2 pointer">
                    <div class="col-auto p-0 pe-2"><i class="fas fa-gift mr-2" style="color:#cf9c15"></i></div>
                    <div class="col-auto p-0 pe-2"> Ưu đãi thành viên mới <img class="mb-1" src="~/Image/Manager/hot.gif"></div>
                </div> *@
                <div class="row mx-3 mt-1 p-2 pt-1 hover-background-secondary rounded-2 pointer">
                    <div class="col-auto p-0 pe-2"><i class="fas fa-user-cog" style="color:#cf9c15"></i></div>
                    <div class="col-auto p-0 pe-2"><a asp-action="Index" asp-controller="UserHome" class="text-decoration-none text-dark"> Tài khoản</a> </div>
                </div>
                <div class="row mx-3 mt-1 itemManagerUser p-2 pt-1 hover-background-secondary rounded-2 pointer">
                    <div class="col-auto p-0 pe-2"><i class="fas fa-file-alt" style="color:#cf9c15"></i></div>
                    <div class="col-auto p-0 pe-2"><a asp-action="Index" asp-controller="UserPost" class="text-decoration-none text-dark"> Quản lý đăng tin </a></div>
                </div>
                @* <div class="row mx-3 mt-1 itemManagerUser p-2 pt-1 hover-background-secondary rounded-3 pointer">
                    <div class="col-auto p-0 pe-2"><i class="far fa-edit"></i></div>
                    <div class="col-auto p-0 pe-2"> Sữa thông tin cá nhân </div>
                </div> *@
                @* <div class="row mx-3 mt-1 itemManagerUser p-2 pt-1 hover-background-secondary rounded-2 pointer">
                    <div class="col-auto p-0 pe-2"><i class="far fa-plus-square" style="color:#cf9c15"></i></div>
                    <div class="col-auto p-0 pe-2"> Nạp tiền tài khoản</div>
                </div> *@ 
                <div class="row mx-3 mt-1 itemManagerUser p-2 pt-1 hover-background-secondary rounded-2 pointer">
                    <div class="col-auto p-0 pe-2"><i class="fas fa-history" style="color:#cf9c15"></i></div>
                    <div class="col-auto p-0 pe-2">
                        <a asp-action="Index" asp-controller="UserHistoryPayment" asp-area="User" class="text-decoration-none text-dark"> Lịch sử giao dịch </a>
                    </div>
                </div>
                <div class="row mx-3 mt-1 p-2 pt-1 hover-background-secondary rounded-2 pointer">
                    <div class="col-auto p-0 pe-2"><i class="fas fa-server" style="color:#cf9c15"></i></div>
                    <div class="col-auto p-0 pe-2">
                        <a asp-action="Index" asp-controller="Category" asp-area="" class="text-decoration-none text-black">
                            Bảng giá dịch vụ
                        </a>
                    </div>
                </div>
                <div class="row mx-3 mt-1 p-2 pt-1 hover-background-secondary rounded-2 pointer">
                    <div class="col-auto p-0 pe-2"><i class="far fa-address-card" style="color:#cf9c15"></i></div>
                    <div class="col-auto p-0 pe-2"> <a asp-action="Index" asp-controller="Contact" asp-area="" class="text-decoration-none text-black">Liên hệ </a></div>
                </div>
                <div class="row mx-3 mt-1 p-2 pt-1 hover-background-secondary rounded-2 pointer">
                    <div class="col-auto p-0 pe-2"><i class="fas fa-sign-out-alt"></i></div>
                    <div class="col-auto p-0 pe-2"><a asp-action="Logout" asp-controller="Account" asp-area="" class="text-black text-decoration-none "> Đăng xuất </a></div>
                </div>
            </div>
            <div class="col ps-4 pe-3 " style="margin-left: 300px; padding-top: 35px;">
               
                @RenderBody()

            </div>
        </div>
    </div>
    <!-- Scroll to Top  -->
    <div id="scroll" onclick="scroll_top()" style="color: rgb(0,0,0)"><i class="fas fa-arrow-up"></i></div>
    <script>
        const ItemsManagerUser = document.querySelectorAll('.itemManagerUser');

        ItemsManagerUser.forEach(item => {
            item.addEventListener('click', function () {
                ItemsManagerUser.forEach(element => {
                    element.classList.remove('text-underline');
                    element.classList.remove('fw-bold');

                });
                this.classList.add('text-underline');
                this.classList.add('fw-bold');
            });
        });
    </script>
    <script>
        tinymce.init({
            selector: '#DescriptionPost',
            plugins: '... image ...',
            toolbar: '... image ...',
        });
        tinymce.init({
            selector: '#contentFeedback',
            plugins: '... image ...',
            toolbar: '... image ...',
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/lib/toastr.js/toastr.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        window.addEventListener('DOMContentLoaded', event => {
            const sidebarToggle = document.body.querySelector('#sidebarToggle');
            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', event => {
                    event.preventDefault();
                    document.body.classList.toggle('sb-sidenav-toggled');
                    localStorage.setItem('sb|sidebar-toggle', document.body.classList.contains('sb-sidenav-toggled'));
                });
            }
        });
    </script>
    @if (TempData["ToastMessageScs"] != null && !string.IsNullOrEmpty(TempData["ToastMessageScs"].ToString()))
    {
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
        <script type="text/javascript">
            toastr.success("@TempData["ToastMessageScs"].ToString()");
        </script>
    }
    @if (TempData["ToastMessageErr"] != null && !string.IsNullOrEmpty(TempData["ToastMessageErr"].ToString()))
    {
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
        <script type="text/javascript">
            toastr.error("@TempData["ToastMessageErr"].ToString()");
        </script>
    }
    @if (TempData["ToastMessageWrg"] != null && !string.IsNullOrEmpty(TempData["ToastMessageWrg"].ToString()))
    {
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
        <script type="text/javascript">
            toastr.options = {
                "progressBar": true,
                "backgroundColor": "green",
                "textColor": "black"
            }
            toastr.warning("@TempData["ToastMessageWrg"].ToString()");
        </script>
    }

</body>
</html>