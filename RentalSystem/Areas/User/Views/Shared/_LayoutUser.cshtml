<!doctype html>
<html lang="en" data-layout="vertical" data-topbar="light" data-sidebar="dark" data-sidebar-size="lg" data-sidebar-image="none" data-preloader="disable">

<head>

	<meta charset="utf-8" />
	<title>Booking.com | Quản lý người dùng</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
	<meta content="Themesbrand" name="author" />
	<!-- App favicon -->
	<link rel="icon" href="~/faviconBooking.ico" class="rounded-circle" type="image/x-icon" />

	<!-- jsvectormap css -->
	<link href="~/assets/libs/jsvectormap/css/jsvectormap.min.css" rel="stylesheet" type="text/css" />

	<!--Swiper slider css-->
	<link href="~/assets/libs/swiper/swiper-bundle.min.css" rel="stylesheet" type="text/css" />

	<!-- Layout config Js -->
	<script src="~/assets/js/layout.js"></script>
	<!-- Bootstrap Css -->
	<link href="~/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
	<!-- Icons Css -->
	<link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
	<!-- App Css-->
	<link href="~/assets/css/app.min.css" rel="stylesheet" type="text/css" />
	<!-- custom Css-->
	<link href="~/assets/css/custom.min.css" rel="stylesheet" type="text/css" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

	@* ///////////Tiny MCE/////////////// *@

	<script src="~/lib/tinymce/tinymce.min.js"></script>
</head>

<body>

	<!-- Begin page -->
	<div id="layout-wrapper">

		<header id="page-topbar" style="background-color: #f2f2f2">
			<div class="layout-width">
				<div class="navbar-header">
					<div class="d-flex">
						<button type="button" class="btn btn-sm px-3 fs-16 header-item vertical-menu-btn topnav-hamburger"
								id="topnav-hamburger-icon">
							<span class="hamburger-icon">
								<span></span>
								<span></span>
								<span></span>
							</span>
						</button>
					</div>
					<div class="d-flex align-items-center">
						<div class="ms-1 header-item d-none d-sm-flex me-3">
							<a asp-action="Index" asp-controller="Home" asp-area="" class="text-decoration-none fw-bold">
								<span style="color:#c88321">Trang chủ Booking.com</span>
							</a>
						</div>

					</div>
				</div>
			</div>
		</header>
		<!-- ========== App Menu ========== -->
		<div class="app-menu navbar-menu">
			<!-- LOGO -->
			<div class="navbar-brand-box">

				<button type="button" class="btn btn-sm p-0 fs-20 header-item float-end btn-vertical-sm-hover" id="vertical-hover">
					<i class="ri-record-circle-line"></i>
				</button>
			</div>

			<div id="scrollbar">
				<div class="container-fluid">
					<ul class="navbar-nav" id="navbar-nav">
						<li class="menu-title" id="two-column-menu">
							<span data-key="t-menu">
								@await Component.InvokeAsync("AccountUser")
								<div class="row mx-4 mt-2 mb-4">
									<button class=" p-0 p-2 mt-2 py-1 px-4 rounded-1 border border-none " style="background-color: rgb(209, 164, 0); font-size: 14px;">
										<a href="#" class="text-decoration-none text-black">Nạp tiền</a>
									</button>
									<button class=" p-0 p-2 mt-2 py-1 px-4 rounded-1 border border-none " style="background-color: rgb(236, 45, 35); font-size: 14px;">
										<a asp-action="AddOrUpdatePost" asp-controller="UserPost" asp-route-id="" class="text-decoration-none text-black">Đăng tin</a>
									</button>
								</div>
								<hr>
							</span>
						</li>
						<li class="menu-title"><span data-key="t-menu">Menu</span></li>
						<li class="nav-item">
							<a class="nav-link menu-link" asp-action="Index" asp-controller="UserHome">
								<i class="fas fa-user-cog"></i> <span>Tài khoản</span>
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link menu-link" asp-action="Index" asp-controller="UserPost">
								<i class="fas fa-file-alt"></i> <span>Quản lý đăng tin</span>
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link menu-link" asp-action="Index" asp-controller="UserHistoryPayment" asp-area="User">
								<i class="fas fa-history"></i> <span> Lịch sử giao dịch</span>
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link menu-link" asp-action="Index" asp-controller="Category" asp-area="">
								<i class="fas fa-server"></i> <span>Bảng giá dịch vụ</span>
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link menu-link" asp-action="Index" asp-controller="Contact" asp-area="">
								<i class="far fa-address-card"></i> <span>Liên hệ</span>
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link menu-link" asp-action="Logout" asp-controller="Account" asp-area="">
								<i class="fas fa-sign-out-alt"></i> <span>Đăng xuất</span>
							</a>
						</li>



					</ul>
				</div>
				<!-- Sidebar -->
			</div>

		</div>
		<!-- Left Sidebar End -->
		<!-- Vertical Overlay-->
		<div class="vertical-overlay"></div>
		<div class="main-content">

			<div class="page-content pt-5 mt-3">
				<div class="container-fluid">

					@RenderBody()

				</div>
				<!-- container-fluid -->
			</div>
		</div>
		<!-- end main content-->

	</div>
	<!-- END layout-wrapper -->
	<!--start back-to-top-->
	<button onclick="topFunction()" class="btn btn-danger btn-icon" id="back-to-top">
		<i class="ri-arrow-up-line"></i>
	</button>
	<!--end back-to-top-->
	<!-- JAVASCRIPT -->
	<script src="~/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
	<script src="~/assets/libs/simplebar/simplebar.min.js"></script>
	<script src="~/assets/libs/node-waves/waves.min.js"></script>
	<script src="~/assets/libs/feather-icons/feather.min.js"></script>
	<script src="~/assets/js/pages/plugins/lord-icon-2.1.0.js"></script>
	<script src="~/assets/js/plugins.js"></script>
	<!-- apexcharts -->
	<script src="~/assets/libs/apexcharts/apexcharts.min.js"></script>
	<!-- Vector map-->
	<script src="~/assets/libs/jsvectormap/js/jsvectormap.min.js"></script>
	<script src="~/assets/libs/jsvectormap/maps/world-merc.js"></script>
	<!--Swiper slider js-->
	<script src="~/assets/libs/swiper/swiper-bundle.min.js"></script>
	<!-- Dashboard init -->
	<script src="~/assets/js/pages/dashboard-ecommerce.init.js"></script>
	<!-- App js -->
	<script src="~/assets/js/app.js"></script>


	<div id="scroll" onclick="scroll_top()" style="color: rgb(0,0,0)"><i class="fas fa-arrow-up"></i></div>
	<script>
		const ItemsManagerUser = document.querySelectorAll('.itemManagerUser');

		ItemsManagerUser.forEach(item => {
			item.addEventListener('click', function () {
				ItemsManagerUser.forEach(element => {
					element.classList.remove('text-underline');
					element.classList.remove('fw-bold');

				});
				this.classList.add('text-underline');
				this.classList.add('fw-bold');
			});
		});
	</script>
	<script>
		tinymce.init({
			selector: '#DescriptionPost',
			plugins: '... image ...',
			toolbar: '... image ...',
		});
		tinymce.init({
			selector: '#contentFeedback',
			plugins: '... image ...',
			toolbar: '... image ...',
		});
	</script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js"></script>
	<script src="~/lib/toastr.js/toastr.min.js"></script>

	@await RenderSectionAsync("Scripts", required: false)

	<script>
		window.addEventListener('DOMContentLoaded', event => {
			const sidebarToggle = document.body.querySelector('#sidebarToggle');
			if (sidebarToggle) {
				sidebarToggle.addEventListener('click', event => {
					event.preventDefault();
					document.body.classList.toggle('sb-sidenav-toggled');
					localStorage.setItem('sb|sidebar-toggle', document.body.classList.contains('sb-sidenav-toggled'));
				});
			}
		});
	</script>
	@if (TempData["ToastMessageScs"] != null && !string.IsNullOrEmpty(TempData["ToastMessageScs"].ToString()))
	{
		<script src="~/lib/jquery/dist/jquery.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
		<script type="text/javascript">
			toastr.success("@TempData["ToastMessageScs"].ToString()");
		</script>
	}
	@if (TempData["ToastMessageErr"] != null && !string.IsNullOrEmpty(TempData["ToastMessageErr"].ToString()))
	{
		<script src="~/lib/jquery/dist/jquery.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
		<script type="text/javascript">
			toastr.error("@TempData["ToastMessageErr"].ToString()");
		</script>
	}
	@if (TempData["ToastMessageWrg"] != null && !string.IsNullOrEmpty(TempData["ToastMessageWrg"].ToString()))
	{
		<script src="~/lib/jquery/dist/jquery.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
		<script type="text/javascript">
			toastr.options = {
				"progressBar": true,
				"backgroundColor": "green",
				"textColor": "black"
			}
			toastr.warning("@TempData["ToastMessageWrg"].ToString()");
		</script>
	}
</body>

</html>