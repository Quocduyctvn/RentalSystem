
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Booking.com | @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link href="~/lib/toastr.js/toastr.min.css" rel="stylesheet" />
	<link href="~/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/AdminStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RentalSystem.styles.css" asp-append-version="true" />
    <link rel="icon" href="~/faviconBooking.ico" class="rounded-circle" type="image/x-icon"/>
	<script src="~/lib/tinymce/tinymce.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>

</head>
<body>

    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-light" style="position: fixed; top: 0; right: 0; left: 0">
        <!-- Navbar Brand-->
        <a class="navbar-brand text-start ps-3 fw-bold fs-4 text-center" style="color:#c57103" href="index.html">Booking.com</a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0 text-black fs-4" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        <!-- Navbar Search-->
        @await Component.InvokeAsync("Admin")
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav" class="mt-5 position-fixed" style="background-color:#48515a; left: 0; top:0; bottom: 0; width: 220px;">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading text-center justify-content-center">
                            <img src="~/Image/Manager/Logo.png" class="rounded-circle" width="100px" height="100px" />
                        </div>
                        <div class="text-center justify-content-center fs-6">Booking.com</div>
                        <hr />
                        <a class="nav-link text-light text-decoration-none" asp-action="Index" asp-controller="AdminHome">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Dashboard
                        </a>
                        <div class="sb-sidenav-menu-heading text-light">Quản lý</div>
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapsePost" aria-expanded="false" aria-controls="collapsePost">
                            <div class="sb-nav-link-icon"><i class="fas fa-tasks text-light"></i></div>
                            Quản lý Cho thuê
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapsePost" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link text-light" asp-action="Index" asp-controller="AdminPost">Quản lý Bài đăng</a>
                                <a class="nav-link text-light" asp-action="Index" asp-controller="AdminTypeOfServices">Quản lý loại dịch vụ</a>
                                <a class="nav-link text-light" asp-action="Index" asp-controller="AdminCategory">Quản lý Gói Tin</a>
                            </nav>
                        </div>
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseAccount" aria-expanded="false" aria-controls="collapseAccount">
                            <div class="sb-nav-link-icon"><i class="fas fa-user-shield text-light"></i></div>
                            Tài khoản
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseAccount" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link text-light" asp-action="Index" asp-controller="AdminRole">Vai trò trên trang</a>
                                <a class="nav-link text-light" asp-action="Index" asp-controller="AdminAccount">Quản lý tài khoản</a>
                            </nav>
                        </div>
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseNews" aria-expanded="false" aria-controls="collapseNews">
                            <div class="sb-nav-link-icon"><i class="fas fa-user-shield text-light"></i></div>
                            Quản lý tin tức
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseNews" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link text-light" asp-action="Index" asp-controller="AdminCateNews">Quản lý thể loại tin </a>
                                <a class="nav-link text-light" asp-action="Index" asp-controller="AdminNews">Quản lý tin tức</a>
                            </nav>
                        </div>
                        <a class="nav-link" asp-action="Index" asp-controller="AdminPolicy" asp-area="Admin">
                            <div class="sb-nav-link-icon text-light"><i class="fas fa-shield-alt"></i></div>
                            Quản lý Chính sách 
                        </a>
                        <a class="nav-link" asp-action="Index" asp-controller="AdminContact" asp-area="Admin">
                            <div class="sb-nav-link-icon text-light"><i class="fas fa-address-card"></i></div>
                            Quản lý liên hệ 
                        </a>
                        <a class="nav-link " asp-action="Logout" asp-controller="Account" asp-area="">
                            <div class="sb-nav-link-icon text-light"><i class="fas fa-sign-out-alt text-light"></i></div>
                            Đăng xuất
                        </a>
                        <!-- <div class="sb-sidenav-menu-heading">Addons</div>
                        <a class="nav-link" href="charts.html">
                            <div class="sb-nav-link-icon"><i class="fas fa-chart-area"></i></div>
                            Charts
                        </a>
                        <a class="nav-link" href="tables.html">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                            Tables
                        </a> -->
                    </div>
                </div>
@*                 <div class="sb-sidenav-footer">
                     <div class="small">Logged in as:</div>
                     Booking.Com 
                </div> *@
            </nav>
        </div>
        <div id="layoutSidenav_content" class="mt-5" style="margin-bottom: 30px">
            <main class="mb-5" style="margin-left: 220px">
                <div class="bg-light mx-3 my-4 pt-2 pb-4 rounded-1">

                    @RenderBody()

                </div>
            </main>
            @* ===============================scroll=============================== *@
            <div id="scroll" onclick="scroll_top()" style="color: rgb(0,0,0); bottom: 80px;"><i class="fas fa-arrow-up"></i></div>
            <footer class="py-4 bg-light " style="position: fixed; bottom: 0; right: 0; left: 0;">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small" style=" z-index: 1000">
                        <div class="text-muted"> </div>
                        <div>
                            <a href="#" class="text-decoration-none"><span class="text-black me-4">Booking.com - Đồ án cơ sở 1 </span>
                                Nền tảng kết nối thuê nhà, phòng trọ, khách sạn và homestay</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/toastr.js/toastr.min.js"></script>
    <script src="~/js/add-update-role.js"></script>
	<script src="~/js/site.js"></script>





    @await RenderSectionAsync("Scripts", required: false)
    <script>
        tinymce.init({
            selector: '#contentFeedback',
            plugins: '... image ...',
            toolbar: '... image ...',
        });

        tinymce.init({
            selector: '#DescriptionPost',
            plugins: '... image ...',
            toolbar: '... image ...',
        });
        tinymce.init({
            selector: '#ImgNews',
            plugins: '... image ...',
            toolbar: '... image ...',
        });
    </script>
    <script>
        window.addEventListener('DOMContentLoaded', event => {
            const sidebarToggle = document.body.querySelector('#sidebarToggle');
            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', event => {
                    event.preventDefault();
                    document.body.classList.toggle('sb-sidenav-toggled');
                    localStorage.setItem('sb|sidebar-toggle', document.body.classList.contains('sb-sidenav-toggled'));
                });
            }
        });
    </script>
    @if (TempData["ToastMessageScs"] != null && !string.IsNullOrEmpty(TempData["ToastMessageScs"].ToString()))
    {
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
        <script type="text/javascript">
            toastr.success("@TempData["ToastMessageScs"].ToString()");
        </script>
    }
    @if (TempData["ToastMessageErr"] != null && !string.IsNullOrEmpty(TempData["ToastMessageErr"].ToString()))
    {
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
        <script type="text/javascript">
            toastr.error("@TempData["ToastMessageErr"].ToString()");
        </script>
    }
    @if (TempData["ToastMessageWrg"] != null && !string.IsNullOrEmpty(TempData["ToastMessageWrg"].ToString()))
    {
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
        <script type="text/javascript">
            toastr.options = {
                "progressBar": true,
                "backgroundColor": "green",
                "textColor": "black"
            }
            toastr.warning("@TempData["ToastMessageWrg"].ToString()");
        </script>
    }
</body>
</html>