<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Booking.com | @ViewData["Title"]</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/RentalSystem.styles.css" asp-append-version="true" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
	<link href="~/lib/toastr.js/toastr.min.css" rel="stylesheet" />
	<link rel="icon" href="~/faviconBooking.ico" type="image/x-icon" />

	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css">

</head>
<body>

	<div class="container" style="background-color: rgb(255, 255, 255); z-index: 1;">
		<div class="row py-1 ">
			<div class="col-auto pointer" data-aos="fade-up" data-aos-delay="50">
				<a asp-action="Index" asp-controller="Home" asp-area="" class="text-decoration-none" >
					<div class="row text-uppercase p-0 mb-0 fw-bold justify-content-center" style="color: #064397;">
						<span class="col-auto p-0 pe-1 pt-1"><img src="~/Image/Manager/Logo.png" width="30px" height="30px" class="rounded-circle" /></span>
						<span class="col-auto  p-0 pt-1" style="font-size: 20px; color:#c88321">Booking.com</span>
					</div>
					<h5 classs="fw-bold" style="font-size: 12px;">Kênh thông tin chuẩn chất lượng</h5>
				</a>
			</div>
			<div class="col-auto ms-auto pt-2 ">
				<div class="row">
					@* <div class="col-auto mt-1 pointer hover-underline">
					<i class="fas fa-gift mr-2" style="color:#cf9c15"></i>
					<span>Khuyến mãi </span>
					</div> *@

					@await Component.InvokeAsync("Pin")


					@await Component.InvokeAsync("Account")

					<div class="col-auto pointer hover-underline">
						<button class="btn p-3 py-1 text-light" style="background-color: #f73859;">
							<a asp-action="AddOrUpdatePost" asp-controller="UserPost" asp-area="User" class="text-light text-decoration-none"> Đăng tin miễn phí <i class="fas fa-plus-circle"></i></a>
						</button>
					</div>

				</div>
			</div>
		</div>
	</div>
	@await Component.InvokeAsync("Menu")


	@RenderBody()



