@model RentalSystem.Models.AppContacts


<div class="container mt-4">
	<div class="row">
		<div class="col  pe-3 pb-4  rounded-2" style="background-color:#ededed">
			<div class="row mx-3 mt-3">
				<div class="col-auto p-0"><a asp-action="Index" asp-controller="Home" class="text-decoration-none">Trang chủ /</a></div>
				<div class="col-auto p-0 ms-1">Liên hệ</div>
			</div>
			<div class="row mx-3 fs-4 mt-1 fw-bold">Liên hệ Booking.com </div>
			<form asp-action="contact" asp-controller="Contact" method="post">
				<div class="row mx-3 mt-3">
					<div class="col-5 mx-0">
						<div class="row">Chúng tôi biết bạn có rất nhiều sự lựa chọn. Nhưng cảm ơn vì đã lựa chọn Booking.Com của chúng tôi.</div>
						<div class="row my-2 mt-4">
							<div class="col-auto p-0 fw-bold">Điện thoại:</div>
							<div class="col-auto p-0 ms-2"> <a href="tel:+84901007221" target="_blank" class="text-decoration-none text-black">0901 007 221</a></div>
						</div>
						<div class="row my-2">
							<div class="col-auto p-0 fw-bold">Zalo:</div>
							<div class="col-auto p-0 ms-2"><a href="https://zalo.me/0901007221" target="_blank" class="text-decoration-none ">0901 007 221</a></div>
						</div>
						<div class="row my-2">
							<div class="col-auto p-0 fw-bold">Email:</div>
							<div class="col-auto p-0 ms-2"><a href="mailto:cskhBooking@gmail.com" target="_blank" class="text-decoration-none ">cskhBooking@gmail.com</a></div>
						</div>
						<div class="row my-2">
							<div class="col-auto p-0"><span class="fw-bold me-2">Địa chỉ:</span>Số 132 - Đường 3/2 - Phường Hưng Lợi - Quận Ninh Kiều - Thành Phố Cần Thơ</div>
						</div>

					</div>
					<div class="col-7 px-2 ps-5">
						<div class="row mb-1 text-uppercase" style="font-size: 14px">
							<span class="text-danger col-auto p-0 me-1">*</span>
							<span class="col-auto p-0">Họ tên của bạn:</span>
						</div>
						<div class="row">
							<input asp-for="FullName" type="text" class="form-control" />
							<span asp-validation-for="FullName "></span>
						</div>
						<div class="row mb-1 mt-3 text-uppercase" style="font-size: 14px">
							<span class="text-danger col-auto p-0 me-1">*</span>
							<span class="col-auto p-0">Email liên hệ</span>
						</div>
						<div class="row">
							<input asp-for="Email" type="text" class="form-control" />
							<span asp-validation-for="Email "></span>
						</div>
						<div class="row mb-1 mt-3 text-uppercase" style="font-size: 14px">
							<span class="text-danger col-auto p-0 me-1">*</span>
							<span class="col-auto p-0">Nội dung:</span>
						</div>
						<div class="row">
							<textarea asp-for="Content" type="text" class="form-control" rows="7"></textarea>
							<span asp-validation-for="Content "></span>
						</div>
						<div class="row mt-3 ">
							<button type="submit" class="btn btn-primary fw-bold">Gửi liên hệ cho Booking.com</button>
						</div>

					</div>

				</div>
			</form>

		</div>
	</div>
</div>